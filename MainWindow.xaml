<Window
	x:Class="Odepax.BigNotif.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Big Notif"
	Background="#FF8E1215"
	ShowInTaskbar="False"
	Topmost="True"
	WindowState="Maximized"
	ResizeMode="NoResize"
	WindowStyle="None"
	Foreground="White"
>
	<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
		<StackPanel.Resources>
			<Style TargetType="TextBlock">
				<Setter Property="FontFamily" Value="pack://application:,,,/Resources/#Alegreya Sans SC Black" />
				<Setter Property="FontWeight" Value="900" />
			</Style>
		</StackPanel.Resources>
		<TextBlock x:Name="TimeText" Text="Yawn!" FontSize="24" />
		<TextBlock Text="Take a Break" FontSize="60" />
	</StackPanel>
</Window>
